{
    "name": "massaal-com/dusha",
    "description": "No-build asset management for Laravel",
    "keywords": [
        "Massaal",
        "laravel",
        "dusha",
        "nobuild"
    ],
    "homepage": "https://github.com/massaal-com/dusha",
    "license": "MIT",
    "authors": [
        {
            "name": "Boyd Bloemsma",
            "email": "boydbloemsma@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^11.0||^12.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.9",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Massaal\\Dusha\\": "src/",
            "Massaal\\Dusha\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Massaal\\Dusha\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Massaal\\Dusha\\DushaServiceProvider"
            ],
            "aliases": {
                "Dusha": "Massaal\\Dusha\\Facades\\Dusha"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
